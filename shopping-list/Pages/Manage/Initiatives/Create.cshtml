@page
@model shopping_list.WebApp.Pages.Manage.Initiatives.CreateModel
@{
    ViewData["Title"] = "Create Initiative";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<hr />

<div>
    <div>
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <label asp-for="Initiative.InitiativeName" ></label>
                <input asp-for="Initiative.InitiativeName"  />
                <span asp-validation-for="Initiative.InitiativeName" ></span>
            </div>
            <div class="form-group">
                <label asp-for="Initiative.InitiativeDescription" ></label>
                <textarea rows="5" asp-for="Initiative.InitiativeDescription"></textarea>
                <span asp-validation-for="Initiative.InitiativeDescription"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
